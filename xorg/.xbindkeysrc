#keystate_numlock = enable
#keystate_capslock = enable
#keystate_scrolllock= enable

# Examples of commands:

"xbindkeys_show" 
  control+shift + q

"syntoggle"
  m:0x0 + c:191
  XF86Tools

"xautolock -locknow"
  m:0x0 + c:63
  KP_Multiply

"xautolock -toggle && dpms-toggle.sh && notify-send 'Toggle Xautolock'"
  m:0x0 + c:160
  XF86ScreenSaver

"mpk toggle"
  XF86AudioPlay

"mpk next"
  m:0x0 + c:171
  XF86AudioNext

"mpk previous"
  m:0x0 + c:173
  XF86AudioPrev

"mpk stop"
  m:0x0 + c:174
  XF86AudioStop

"mpk -h 192.168.1.2 -p 6600 toggle"
  XF86AudioPlay + Shift

"mpk -h 192.168.1.2 -p 6600 next"
  XF86AudioNext + Shift

"mpk -h 192.168.1.2 -p 6600 previous"
  XF86AudioPrev + Shift

"mpk -h 192.168.1.2 -p 6600 stop"
  XF86AudioStop + Shift

"change_vol -i 5"
  m:0x0 + c:123
  XF86AudioRaiseVolume

"change_vol -d 5"
  m:0x0 + c:122
  XF86AudioLowerVolume

"change_vol -t"
  m:0x0 + c:121
  XF86AudioMute

